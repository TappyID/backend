# Configuração do ambiente
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/tappyone?sslmode=disable
JWT_SECRET=your-super-secret-jwt-key-here

# WAHA API (WhatsApp HTTP API)
# Para desenvolvimento local, usar localhost:3000
# Para produção, usar a URL do seu WAHA deployment
WHATSAPP_API_URL=http://localhost:3000
WHATSAPP_API_TOKEN=your-waha-api-key

# URL base para servir arquivos (deve ser acessível pelo WAHA API)
# Para Docker: use host.docker.internal:8080 ou o IP da máquina
# Para produção: use o domínio real
BASE_URL=http://host.docker.internal:8080

# Webhook URL para receber eventos do WhatsApp
WEBHOOK_URL=http://localhost:8080/api/webhooks/whatsapp
